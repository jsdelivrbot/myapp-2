.page-content-home{
  .swiper-container{
    height: 3rem;
    padding-bottom: 35px;
    .swiper-slide{
      overflow: hidden;
      img{
        width: 100%;
      }
    }
    .swiper-pagination{
      bottom: 0;
      height: 35px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
}
.swiper-pagination-bullet{
  background: #bbb;
  opacity: 1;
}
.swiper-pagination-bullet-active{
  width: 16px;
  height: 16px;
  background: #81D8D0;
}

.wpPadding-lr{
  padding: 0 0.2rem;
}
.wpCentent{
  
}
.wpTitleBox{
  display: flex;
  justify-content: space-between;
  line-height: 2.2;
  .wpTitle{
    
  }
  .wpMore{
    color: #119C8F;
  }
}

.wpList{
  
}

.wpListItem{
  
  height: 0.8rem;
  position: relative;

  a{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }
  .wpText{
    flex: 0 1 90%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #222;
  }
  .wpTime{
    flex: 1 0 10%;
    text-align: right;
    color: #353535;
    font-size: 0.26rem;
  }
}
.wpList-active::before{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  content: '';
  background: #ebebeb;
}
.border1px::after{
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  content: '';
  height: 1px;
  background: #ebebeb;
  transform: scaleY(.5);
}































































