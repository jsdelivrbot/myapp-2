import React from 'react';

const wpTitleBox = ({ title, link, linkShow = false } ) => (
	<div className='wpTitleBox wpPadding-lr'>
      	<p className='wpTitle'>{ title }</p>
      	{
      		linkShow ? <a href={ link } title='查看更多' className='wpMore' >查看更多</a> : null
      	}
    </div>
)

export default wpTitleBox;
